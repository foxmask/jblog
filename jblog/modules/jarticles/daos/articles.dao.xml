    </record>
    <factory>
        <method name="findAll" type="select">
            <order>
                 <orderitem property="date" way="desc" />
            </order>
        </method>
		
        <method name="getPublished" type="selectfirst">
			<parameter name="id" />
			<conditions logic="and">
				<eq property="id" value="$id" />
				<eq property="published" value="TRUE" />
			</conditions>
        </method>

        <method name="count" type="count">
        </method>

        <method name="countByCategory" type="count">
            <parameter name="category" />
            <conditions logic="and">
                <eq property="category" value="$category" />
            </conditions>
        </method>
    
